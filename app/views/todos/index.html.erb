<div class="row">
  <div class="col s12">
    <%= form_for Todo.new, remote: true do |f| %>
      <%= f.text_field :title, placeholder: 'Is there a new todo?' %>
      <%= f.submit :submit %>
    <% end %>
  </div>
  <div class="col s12">
    <ul class="collection with-header todo_list">
      <% if @todos.empty? %>
        <li class="collection-header">You have no todos.</li>
      <% else %>
        <li class="collection-header"><h4>Your todos</h4></li>
        <%= render @todos %>
      <% end %>
    </ul>
  </div>
</div>
